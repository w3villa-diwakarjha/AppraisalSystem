<%=form_with(model: appraisal_detail, local: true) do |form|%>
    <div class="form-group">
        <%=form.label :appraisal_id, 'Appraisal', class: 'control-label'%>
        <%=form.collection_select :appraisal_id, Appraisal.all, :id, :id, {prompt: 'Select Appraisal'}, class: 'form-control'%>
        
    </div>

    <div class="form-group">
        <%=form.label :kra_id, 'KRA', class: 'control-label' %>
        <%=form.collection_select :kra_id, Kra.all, :id, :title, {prompt: 'Select KRA'}, class: 'form-control'%>
    </div>

    <div class="form-group">
        <%=form.label :appraisee_marks, 'Appraisee Marks',class: 'control-label'%>
        <%=form.number_field :appraisee_marks, class: 'form-control'%>
    </div>

    <div class="form-group">
        <%=form.label :appraiser_marks, 'Appraiser Marks', class: 'control-label'%>
        <%=form.number_field :appraiser_marks, class: 'form-control'%>
    </div>

    <div class="form-group">
        <%=form.submit 'Save', class: 'btn btn-primary'%>
    </div>
<%end%>
