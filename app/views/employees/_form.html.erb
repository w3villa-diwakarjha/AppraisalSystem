<%=form_with(model: employee, local: true) do |form|%>
    <div class="form-group">
        <%=form.label :name, class: 'control-label'%>
        <%=form.text_field :name, class: 'form-control'%>
    </div>

    <div class="form-group">
        <%=form.label :email, class: 'control-label'%>
        <%=form.email_field :email, class: 'form-control'%>
    </div>

    <div class="form-group">
        <%=form.label :designation_id, class: 'control-label'%>
        <%=form.collection_select :designation_id, Designation.all, :id, :title, {prompt: 'Select Designation'}, class: 'form-control'%>
    </div>

    <div class="form-group">
        <%= form.label :role, 'Role', class: 'control-label' %>
        <%= form.select :role, Employee::ROLE, { prompt: 'Select Role' }, class: 'form-control' %>
    </div>

    

    <%=form.submit 'Save', class: 'btn btn-primary'%>
<%end%>
